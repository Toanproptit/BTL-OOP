<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageorderController" stylesheets="@Manageorder.css">

    <children>
        <!-- TableView để hiển thị thông tin bàn -->
        <TableView fx:id="tableview" layoutX="137.0" layoutY="120.0" prefHeight="200.0" prefWidth="500.0" style="-fx-background-color: #A8E6CF;">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="100.0" style="-fx-background-color: #C8E6C9;" text="Mã bàn" />
                <TableColumn fx:id="columnName" prefWidth="200.0" style="-fx-background-color: #C8E6C9;" text="Tên bàn" />
                <TableColumn fx:id="columnStatus" prefWidth="200.0" style="-fx-background-color: #C8E6C9;" text="Trạng thái" />
            </columns>
        </TableView>

        <!-- TextField để nhập thông tin -->
        <TextField fx:id="textField1" layoutX="249.0" layoutY="340.0" prefHeight="26.0" prefWidth="170.0" promptText="Nhập mã bàn" />
        <TextField fx:id="textField2" layoutX="249.0" layoutY="380.0" prefHeight="26.0" prefWidth="170.0" promptText="Nhập tên bàn" />
        <ComboBox fx:id="statusComboBox" layoutX="249.0" layoutY="420.0" prefHeight="26.0" prefWidth="170.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Đang sử dụng" />
                    <String fx:value="Trống" />
                </FXCollections>
            </items>
        </ComboBox>


        <!-- Các nút hành động -->
        <Button fx:id="buttonAdd" layoutX="437.0" layoutY="340.0" onAction="#handleAddTable" text="Thêm bàn" />

        <!-- Nút quay lại -->
        <Button fx:id="backButton" layoutX="577.0" layoutY="423.0" onAction="#switchToDashBoard" text="Quay lại" />
      <Label layoutX="136.0" layoutY="339.0" prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #FFFFFF;" text="Nhập mã bàn" />
      <Label layoutX="136.0" layoutY="384.0" style="-fx-background-color: #FFFFFF;" text="Nhập tên bàn" />
      <Label layoutX="137.0" layoutY="424.0" style="-fx-background-color: #FFFFFF;" text="Nhập trạng thái" />
      <Label layoutX="334.0" layoutY="93.0" prefHeight="20.0" prefWidth="105.0" text="Danh sách bàn" />
      <Button fx:id="choosePhoto" layoutX="132.0" layoutY="530.0" onMouseClicked="#handleChangeBackgroundImage" text="Chọn ảnh nền" />
    </children>
</AnchorPane>
