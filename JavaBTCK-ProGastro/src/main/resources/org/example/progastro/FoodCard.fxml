<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox onMouseClicked="#handleClick" prefWidth="220" spacing="8" style="-fx-background-color: white; -fx-background-radius: 15;              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0);              -fx-padding: 10;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FoodCardController">

    <!-- Image -->
    <ImageView fx:id="foodImage" fitHeight="130" fitWidth="200" style="-fx-background-radius: 15;" />

    <!-- Name -->
    <Label fx:id="foodName" style="-fx-font-size: 16; -fx-font-weight: bold;" />

    <!-- Description -->
    <Label fx:id="foodDescription" style="-fx-text-fill: gray; -fx-font-size: 13;" wrapText="true" />

    <!-- Price -->
    <Label fx:id="foodPrice" style="-fx-text-fill: #F97316; -fx-font-weight: bold; -fx-font-size: 16;" />

</VBox>
